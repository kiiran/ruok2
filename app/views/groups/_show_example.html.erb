<div class="container">
  <div class="row">
    <!-- group stats and name here -->
    <div class="col-xs-12 col-sm-6">
      <h1 class="dark-green-text"><%= @group.name %></h1>
    </div>
    <div class="col-xs-12 col-sm-6">
      <h5 class="dark-green-text text-right">Average positivity:</h5>
      <h5 class="dark-green-text text-right">Average negativity:</h5>
    </div>
  </div>
  <div class="row">
    <!-- group stats and name here -->
    <div class="col-xs-12">
      <h4 class="dark-green-text">Group's Positivity Chart</h4>
      <h5>Graph shows the positivity index calculated for each answer given in the group.</h5>
      <div class="chart-border">
        <%= javascript_include_tag "//code.highcharts.com/highcharts.js", "chartkick" %>
        <%= line_chart(Answer.group(:question_id).sum(:pos), height: "250", width: "1000") %>
      </div>
    </div>
  </div>

  <hr class="page-divider">

  <div class="row">
    <div class="col-xs-12">
      <h3 class="dark-green-text">Team members</h3>
      <h5>Here are all the people that submit questionnaires to the group. To add a new member and follow his/her mood just click the bottom below.</h5>
    </div>
  </div>

  <div class="row">
    <% @group.users.each do |user| %>
      <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
        <div class="card-team-members">
          <div class="tiny-link">
            <% if user.id != current_user.id %>
              <%= link_to "x", group_group_membership_path(@group.id, user), method: :delete %>
            <% else %>
              <%= link_to "x", "#" %>
            <% end %>
          </div>
          <div class="picture">
            <% if !user.photo.nil? %>
              <%= cl_image_tag current_user.photo.path, width: 100, height: 100, gravity: :face, crop: :fill, class: "avatar-medium" %>
            <% elsif !user.facebook_picture_url.nil? %>
              <%= image_tag user.facebook_picture_url, class: "avatar-medium" %>
            <% else %>
              <%= image_tag 'default-member-image.png', class: "avatar-medium" %>
            <% end %>
          </div>
          <div class="member-info">
            <p class="remove-margin-bottom"><%= user.first_name + " " + user.last_name %></p>
            <p style="font-size: 12px;"><%= user.email %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <hr class="page-divider">

  <div class="row">
    <% if @group.group_memberships.where(user_id: current_user.id, group_id: @group.id).take.admin == true %>
      <div class="col-xs-6">
        <div style="float: left">
          <%= link_to "Add team members", new_group_group_membership_path(group_id: @group.id), method: :get, class: "btn btn-brand-with-bg" %>
        </div>
      </div>
      <div class="col-xs-6">
        <div style="float: right">
          <%= link_to "Delete team", group_path(id: @group.id), method: :delete, class: "btn btn-dangerous" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <div class="text-center">
        <%= link_to "Questionnaire", group_current_user_form_path(group_id: @group.id), class: "btn btn-default", id: "open-questionnaire"%>
        <!-- if there is no convo_history, create one: -->
        <% @new_convo_history = ConversationHistory.create(user: current_user, group: @group) %>
        <!-- jquery for this at the bottom of this page-->
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <div class="wrapper" id="questionnaire" style="display: none; width: 100%;">
        <%#= render 'questionnaire' %>
      </div>
    </div>
  </div>
</div>



<%= content_for(:after_js) do %>
  <script>
    $(document).ready(function() {



      $('#open-questionnaire').on('click', function(event){
        $('#open-questionnaire').hide();
        $('#questionnaire').fadeIn("slow");
        $('#answer-text','#q01').focus();
      });

    });
  </script>
<% end %>

