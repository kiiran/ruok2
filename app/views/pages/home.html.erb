<div class="wrapper">
  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(45,125,92,0.6) 0%, rgba(45,125,92,0.6) 50%), url(<%= asset_path 'background-image.jpg' %>);">
    <div class="container">
      <div class="banner-content">
        <% if current_user.nil? %>
          <h1>Hey there!</h1>
        <% else %>
          <h1><%= current_user.first_name.nil? ? "Hey there!" : "Hey there, " + current_user.first_name + "!" %></h1>
        <% end %>

        <!-- Let's add the reply box here  -->


      </div>
    </div>
    <div class="container">
      <div>
        <div class="row">
          <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
            <div class="home-question" id="q01">
              <% question_1 = Question.sample_of_subject("generic_first_questions") %>
              <h2><%= question_1.content %></h2>
              <%= render 'form_question' %>
            </div>
            <div class="home-question" id="q02" style="display: none;">
              <h2></h2>
              <%= render 'form_question' %>
            </div>
            <div class="home-question" id="q03" style="display: none";>
              <h2></h2>
              <%= render 'form_question' %>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

<%= content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {

      $('.btn').on('click', function(event){
        <!-- if id03 not showing: -->
        if ($('#q03').is(":visible")) {
          console.log("Final question. Redirecting to results...");
        } else {

          event.preventDefault();

          console.log($('#answer-text', '#q01').val());
          var parameters = {
            "text": $('#answer-text', '#q01').val(),
            "question_id": "<%= question_1.id %>"
          }
          $.ajax({
            type: "POST",
            url: "/answers",
            data: parameters,
            success: function(data) {
              console.log("Sent to answers_controller");
            }
          });
        }
      });
    });

  <% end %>
<% end %>
