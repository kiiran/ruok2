<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-lg-4 col-lg-offset-4">
      <h2 class="text-center">Sign up</h2>
      <%= render "devise/shared/facebook_login" %>
      <h4 class="text-center">with your email</h4>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :first_name, required: true, autofocus: true %>
          <%= f.input :last_name, required: true %>
          <%= f.input :email, required: true %>
          <%= f.input :password, required: true, label: "Password" + (" (#{@minimum_password_length} characters minimum)" if @minimum_password_length) %>
          <%= f.input :password_confirmation, required: true %>
          <%= f.input :photo, as: :attachinary, label: "Profile photo" %>
          <%= yield(:photo_upload_js) %>
        </div>
        <div class="col-xs-6">
          <div class="form-actions">
            <%= f.button :submit, "Sign up", class: "btn-brand-with-bg" %>
          </div>
        </div>
      <% end %>
      <div class="text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

<%= content_for(:photo_upload_js) do %>
  $('.cloudinary-fileupload').bind('fileuploadprogress', function(e, data) {
    $('.progress_bar').css('width', Math.round((data.loaded * 100.0) / data.total) + '%');
  });
<% end %>
